<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".New_Table"
    android:orientation="vertical"
    android:background="?attr/colorBackground">

    <TextView
        android:id="@+id/ExitButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="?attr/colorSubTitle"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:text="Packet name: "
            android:textColor="?attr/colorSubTitle"/>

        <EditText
            android:id="@+id/TableNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="?attr/colorSubTitle"
            android:paddingBottom="10dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/CreateGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="?attr/colorButtonBackground"
        android:textColor="?attr/colorSubTitle"
        android:text="Create Packet"/>


</LinearLayout>
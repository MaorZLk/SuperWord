<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_button">

    <TextView
        android:id="@+id/WordDetails"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="TextView"
        android:textColor="?attr/colorMainTitle"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="21dp"
        android:textDirection="ltr"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20dp"
        android:textColor="#000"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="21dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/WordsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="?attr/colorSubTitle"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="21dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"/>

    <ImageButton
        android:id="@+id/DeleteWordImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:backgroundTint="?attr/colorButtonBackground"/>

</RelativeLayout>